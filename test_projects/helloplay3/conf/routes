# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                     controllers.UserController.home()



GET         /users                controllers.UserController.getUsers()
GET         /user/:id             controllers.UserController.getUser(id: Integer)
GET         /user/:user           controllers.UserController.user(user: controllers.User)

GET         /users/create         controllers.UserController.showCreateUserForm()
POST        /users/create         controllers.UserController.createUser()


GET         /user/edit/:id        controllers.UserController.showEditUserForm(id: Integer)
POST         /user/edit            controllers.UserController.editUser()

GET         /age                  controllers.UserController.age(ageRange: controllers.AgeRange)

GET         /list                 controllers.UserController.list(tags: java.util.List[String])

#GET         /user/get             controllers.UserController.getUser(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.versioned(path="/public", file: Asset)
